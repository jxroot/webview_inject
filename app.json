{
  "url": "https://farsroid.com",  // URL to load initially
  "websites": {
    "*.farsroid.com": {  // Wildcard rule for any subdomain of farsroid.com
      "scripts": [
        "alert('Tracker');"
      ]
    },
     "regex:^.*\\.farsroid\\.com$": {  // Regex rule for any secureX.com domain
      "scripts": [
        "alert('Regex matched for farsroid.com domains!');"
      ]
    },
    "b.com": {  // Exact domain match for b.com
      "scripts": [
        "alert('Welcome to B.com!');",
        "document.body.style.backgroundColor = 'blue';"
      ]
    }
  },
  "persistent": {
    "scripts": [
      "alert('Persistent Script!');"
    ],
    "status": true
  }
}
